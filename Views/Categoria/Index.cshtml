@{
    ViewData["Title"] = "Categorias";
}

@model List<SistemaVenda.Models.CategoriaViewModel>;

<h2 class="mb-3 text-primary">Categorias</h2>
<hr />

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered shadow">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Código</th>
                <th>Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr onclick="Editar(@item.Codigo)" style="cursor: pointer;">
                    <td class="text-center fw-bold">@item.Codigo</td>
                    <td>@item.Descricao</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />

<button type="button" class="btn btn-primary btn-lg shadow rounded" onclick="Cadastrar()">Cadastrar Categoria</button>

<script>
    function Cadastrar(){
        window.location = window.origin + "\\Categoria\\Cadastro";
    }

    function Editar(Codigo){
        window.location = window.origin + "\\Categoria\\Cadastro\\" + Codigo;
    }
</script>
